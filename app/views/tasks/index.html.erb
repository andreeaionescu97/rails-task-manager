<h1>Task Manager</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
    <%= link_to "Delete a Task", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
  <% end %>
</ul>



<%= link_to "Add New Task", tasks_new_path %>



